h2 
  span(ng-show="project.$id") Editing project
  span(ng-hide="project.$id") New project
form(ng-submit="saveProject(project)")
  .lang-selector
    | Language:
    a(ng-repeat="l in langs" href="javascript:void(0);" ng-click="formLang(l)" ng-class="{active: lang == l}") {{l}}
  input#name(type="text" ng-model="project.name[lang]" placeholder="Name")
  input#url(type="text" ng-model="project.url" placeholder="URL")
  input#github(type="text" ng-model="project.github" placeholder=":owner/:repo")
  input#tags(type="text" ng-model="project.tags[lang]" placeholder="Project tags (comma separated)")
  input#techs(type="text" ng-model="project.techs[lang]" placeholder="Technologies (comma separated)")
  textarea#description(ng-model="project.description[lang]" placeholder="Description")
  .checkbox-field
    input#mobile(type="checkbox" ng-model="project.mobile") 
    label(for="mobile") Show mobile version
  h3 
    label(for="long_description") Long description
  text-angular#long_description(ng-model="project.long_description[lang]")
  input(type="submit" value="Submit")
